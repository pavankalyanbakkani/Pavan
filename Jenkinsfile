pipeline {
    agent {
        node {
            label 'built-in' // Use Jenkins' built-in node
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Pavan kalyan bakkani'
                echo 'Bridger, Neeeeeeeeeeeeeeeey'
                echo 'Bridger, Neeebbbbeeeeeeeeey'
                echo 'Bridgehhhey'
                sh 'exit 1'
             
               
            }
        }
        stage('Descr') {
            steps {
                echo 'Hyuderabad'
                echo 'Suncity'
                echo 'Hyuderabad'
                echo 'Suniiiiiity'
              
            }
        }
    }

    post {
        success {
            script {
               
                    echo "ABD"
                }
            }
        failure{
            echo 'build has failed'
    }
        }
        
}
